	<servlet>
		<servlet-name>updateStudentServlet</servlet-name>
		<servlet-class>com.mvc.servlet.updateStudentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>updateStudentServlet</servlet-name>
		<url-pattern>/updateStudentServlet</url-pattern>
	</servlet-mapping>

	<!-- queryStudentServlet -->
	<servlet>
		<servlet-name>queryStudentServlet</servlet-name>
		<servlet-class>com.mvc.servlet.queryStudentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>queryStudentServlet</servlet-name>
		<url-pattern>/queryStudentServlet</url-pattern>
	</servlet-mapping>

	<!-- queryStudentServlet -->
	<servlet>
		<servlet-name>queryAllStudentServlet</servlet-name>
		<servlet-class>com.mvc.servlet.queryAllStudentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>queryAllStudentServlet</servlet-name>
		<url-pattern>/queryAllStudentServlet</url-pattern>
	</servlet-mapping>
</web-app>